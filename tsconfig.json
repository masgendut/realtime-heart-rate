{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./lib",
		"removeComments": false,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
  },
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
